*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
COMMIT
*nat
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
iptables -A INPUT -p tcp --dport 5544 -s 192.168.0.0/16 -j ACCEPT
iptables -A INPUT -p udp --dport 5544 -s 192.168.0.0/16 -j ACCEPT
iptables -A INPUT -p tcp --dport 5544 -j DROP
iptables -A INPUT -p udp --dport 5544 -j DROP
{% if grains.role == 'jenkinsci' %}
-A PREROUTING -i eth0 -p tcp -m tcp --dport 80 -j REDIRECT --to-ports 8321
{% endif %}
COMMIT
