[Unit]
Description=Aider
After=network.target
StartLimitIntervalSec=0

[Service]
User={{ pillar['shellserver_unprivileged_user_name'] }}
Type=simple
Restart=always
RestartSec=10
WorkingDirectory=/home/{{ pillar['shellserver_unprivileged_user_name'] }}/code/projects/vibe-skeleton
ExecStartPre=/usr/bin/git instaweb --port 8081 --start
ExecStart=/etc/aider/venv/bin/aider --openai-api-base http://192.168.1.233:8080 --openai-api-key dummy --model openai/localmodel --no-show-model-warnings --yes --analytics-disable --browser

[Install]
WantedBy=multi-user.target


